<%= render 'shared/errors', object: @question %>
<%= form_with model: @question do |f| %>
  <div class='mb-3 row'>
    <div class='col-sm-2 com-form-label'>
      <%= f.label :title, class: 'col-sm-2 col-form-label' %>
    </div>

    <div class='col-sm-10'>
      <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    </div>
  </div>

  <div class='mb-3 row'>
    <div class='col-sm-2 com-form-label'>
      <%= f.label :body, class: 'col-sm-2 col-form-label' %>
    </div>

    <div class='col-sm-10'>
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>
  <%= f.submit 'Submit question', class: 'btn btn-primary' %>
<% end %>