<h1 class='mb-4'><%= @question.title %></h1>

<time datatime="<%= @question.created_at_mod %>">
  <%= @question.created_at_mod %>
</time>

<p class='lead-my-3'>
  <%= @question.body%>
</p>

<%= link_to 'Back', questions_path(@question), class: 'btn btn-info' %>
<%= link_to 'Edit', edit_question_path(@question), class: 'btn btn-secondary' %>
<%= link_to 'Destroy', question_path(@question), class: 'btn btn-danger',
  data: {method: :delete, confirm: 'Are you sure?'} %>

<h3>Whrite your answer</h3>
<%= render 'answers/form' %>

<h2 class='mt-5'>Answers</h2>
<% @answers.each do |answer| %>
  <hr>
  <article class='mb-3'>
    <time datatime="<%= answer.created_at_mod %>">
      <%= answer.created_at_mod %>
    </time>

    <p>
      <%= answer.body%>
    </p>
    <%= link_to 'Edit', edit_question_answer_path(@question, answer), class: 'btn btn-secondary' %>
    <%= link_to 'Delete', question_answer_path(@question, answer), class: 'btn btn-danger btn-sm',
    data: {method: :delete, confirm: 'Are you sure?'} %>
  </article>
<% end %>